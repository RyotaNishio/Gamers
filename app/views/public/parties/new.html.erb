<div class="w-50 mx-auto p-3 bg-light rounded-lg mt-5">
  <% if current_user.party_id.nil? %>
    <%= form_with model: @party do |f| %>
      <%= f.hidden_field :owner_id, value: current_user.id %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :recruitment_numbers %>
        <%= f.number_field :recruitment_numbers, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :difficulty %>
        <%= f.select :difficulty, [['beginner'], ['hard'], ['extra']] %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="action">
        <%= f.submit "New Party", class: "btn btn-success" %>
      </div>
    <% end %>
  <% else %>
    <p class="h5">You are already joined a party.</p>
    <%= link_to "Go to your party", party_path(current_user.party_id), class: "btn btn-primary" %>
  <% end %>
</div>