<div class="text-center justify-content-center form-signin" style="padding-top: 50px;">
  <div class="w-25 m-auto rounded-lg p-4 bg-light">
    <h2>Please Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-2" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign in", class: "btn btn-primary btn-lg mt-3 w-100" %>
      </div>
    <% end %>

    <p class="mt-2 mb-3 text-muted">&copy; 2017â€“2021</p>
  <%= render "admins/shared/links" %>
  </div>
</div>
