<div class="w-25 my-5 mx-auto bg-light rounded-lg p-4 text-center">
  <p class="h2 mb-2">Edit user information</p>
  <%= form_with model: @user, url: admin_user_path(@user.id), method: :put do |f| %>
      <div class="field mb-2">
        <label>Email: </label>
        <%= @user.email %>
      </div>

      <div class="field mb-2">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "true" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "false" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn btn-primary btn-lg w-100" %>
      </div>
  <% end %>
  <p class="mt-2 mb-3 text-muted">&copy; 2017â€“2021</p>
</div>